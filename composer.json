{
  "name": "petervandijck/claude-flux-docs",
  "description": "A simple Laravel package that publishes claude-flux.md documentation to your project root",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Peter Van Dijck",
      "email": "petervandijck@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "illuminate/support": "^10.0|^11.0|^12.0"
  },
  "autoload": {
    "psr-4": {
      "PeterVanDijck\\ClaudeFluxDocs\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "PeterVanDijck\\ClaudeFluxDocs\\ClaudeFluxDocsServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}